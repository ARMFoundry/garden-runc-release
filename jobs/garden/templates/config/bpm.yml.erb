processes:
  - name: garden
    executable: /bin/sh
    args:
      - -c
      - /var/vcap/jobs/garden/bin/garden_start
    unsafe:
      privileged: true
    hooks:
      pre_start: /var/vcap/jobs/garden/bin/bpm-pre-start
    additional_volumes:
      - path: /var/vcap/data/garden/sockets
        writable: true
      - path: /var/vcap/data/netplugin-server/sockets
        writable: true
      - path: /var/vcap/data/grootfs/store
        writable: true
      - path: /var/vcap/data/rep
        allow_executions: true
